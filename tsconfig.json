{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./*"]
    },
    "types": ["node"]
  },
  "include": [
    ".nuxt/nuxt.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/**/*.vue",
    "pages/**/*.vue",
    "layouts/**/*.vue",
    ".storybook/**/*",
    "*.vue",
    "composables/**/*.ts",
    "composables/**/*.vue"
  ],
  "exclude": ["node_modules", ".output", "dist"]
}
